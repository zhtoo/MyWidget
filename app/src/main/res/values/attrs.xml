<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    注意：在attrs文件中，attr标签中的name不能相同



    -->
    <declare-styleable name="CircleProgressBar">
        <attr name="progressColor" format="color"/>
        <attr name="progressBackgroundColor" format="color"/>
        <attr name="progressMax" format="float"/>
        <attr name="circleWidth" format="dimension"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="riv_border_width" format="dimension"/>
        <attr name="riv_border_color" format="color"/>
        <attr name="riv_border_overlay" format="boolean"/>
        <attr name="riv_fill_color" format="color"/>
    </declare-styleable>


    <declare-styleable name="DownloadView">
        <attr name="progress_color" format="color"/>
        <attr name="progress_background_color" format="color"/>
        <attr name="progress_max" format="float"/>
        <attr name="circle_width" format="dimension"/>
        <attr name="text_size" format="dimension"/>
        <attr name="text_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CountDownView">
        <attr name="time" format="string"/>
        <attr name="start" format="boolean"/>
        <attr name="size" format="dimension"/>
        <attr name="color" format="color"/>
    </declare-styleable>

    <declare-styleable name="HstogramView">
        <attr name="startColor" format="color"/>
        <attr name="endColor" format="color"/>
        <attr name="lineColor" format="color"/>
        <attr name="normalBarChartColor" format="color"/>
        <attr name="spacing" format="dimension"/>
        <attr name="allTextSize" format="dimension"/>
        <attr name="allTextColor" format="color"/>
        <attr name="equal" format="integer"/>
    </declare-styleable>


    <!--这里是3D效果的ViewPager（start）-->

    <attr name="icvp_min_page_scale_offset" format="dimension"/>
    <attr name="icvp_center_page_scale_offset" format="dimension"/>
    <attr name="icvp_min_page_scale" format="float"/>
    <attr name="icvp_max_page_scale" format="float"/>
    <attr name="icvp_medium_scaled" format="boolean"/>
    <attr name="icvp_scroll_duration" format="integer"/>
    <attr name="icvp_page_duration" format="integer"/>
    <attr name="icvp_interpolator" format="reference"/>

    <declare-styleable name="HorizontalInfiniteCycleViewPager">
        <attr name="icvp_min_page_scale_offset"/>
        <attr name="icvp_center_page_scale_offset"/>
        <attr name="icvp_min_page_scale"/>
        <attr name="icvp_max_page_scale"/>
        <attr name="icvp_medium_scaled"/>
        <attr name="icvp_scroll_duration"/>
        <attr name="icvp_page_duration"/>
        <attr name="icvp_interpolator"/>
    </declare-styleable>

    <declare-styleable name="VerticalInfiniteCycleViewPager">
        <attr name="icvp_min_page_scale_offset"/>
        <attr name="icvp_center_page_scale_offset"/>
        <attr name="icvp_min_page_scale"/>
        <attr name="icvp_max_page_scale"/>
        <attr name="icvp_medium_scaled"/>
        <attr name="icvp_scroll_duration"/>
        <attr name="icvp_page_duration"/>
        <attr name="icvp_interpolator"/>
    </declare-styleable>
    <!--这里是3D效果的ViewPager（end）-->

    <!--MyProgressView-->
    <declare-styleable name="MyProgressView">
        <attr name="mCircleWidth" format="float"/>
        <attr name="mProgress" format="float"/>
        <attr name="mProgressMax" format="float"/>
        <attr name="startAngle" format="float"/>
        <attr name="maxAngle" format="float"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="progressColor1" format="color"/>
    </declare-styleable>

    <!--LotteryNumberView-->
    <declare-styleable name="LotteryNumberView">
        <attr name="mRadius" format="dimension"/>
        <attr name="mSpacing" format="dimension"/>
    </declare-styleable>

    <!--MyProgressView-->
    <declare-styleable name="PieChartView">
        <!--扇形间隔距离-->
        <attr name="intervalAngle" format="float"/>
        <!--中间圆半径-->
        <attr name="radius" format="dimension"/>
        <!--扇形的宽度-->
        <attr name="pieChartWidth" format="dimension"/>
        <!--扇形点击时宽度-->
        <attr name="clickWidth" format="dimension"/>
    </declare-styleable>

</resources>