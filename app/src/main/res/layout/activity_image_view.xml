<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.zht.samplewidget.imageView.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="50dp"
            android:src="@mipmap/default_avatar"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_overlay="true"
            app:civ_border_width="20dp"
            app:civ_fill_color="@android:color/holo_blue_dark" />

        <com.zht.samplewidget.imageView.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/default_avatar"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_overlay="false"
            app:civ_border_width="20dp"
            app:civ_fill_color="@android:color/holo_blue_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.zht.samplewidget.imageView.RoundImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="50dp"
            android:src="@mipmap/default_avatar"
            app:riv_border_color="@color/colorAccent"
            app:riv_border_overlay="true"
            app:riv_border_width="10dp"
            app:riv_corner_radius="10dp"
            app:riv_fill_color="@android:color/holo_blue_dark" />

        <com.zht.samplewidget.imageView.RoundImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/default_avatar"
            app:riv_border_color="@color/colorAccent"
            app:riv_border_overlay="false"
            app:riv_border_width="20dp"
            app:riv_corner_radius="50dp"
            app:riv_fill_color="@android:color/holo_blue_dark" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.zht.samplewidget.imageView.RoundImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:src="@mipmap/default_avatar"
            app:riv_border_color="@color/colorAccent"
            app:riv_border_overlay="true"
            app:riv_border_width="10dp"
            app:riv_corner_radius="10dp"
            app:riv_fill_color="@android:color/holo_blue_dark"
            app:riv_use_special_border="false" />

        <com.zht.samplewidget.imageView.RoundImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@mipmap/default_avatar"
            app:riv_border_color="@color/colorAccent"
            app:riv_border_overlay="false"
            app:riv_border_width="10dp"
            app:riv_corner_radius="10dp"
            app:riv_fill_color="@android:color/holo_blue_dark"
            app:riv_use_special_border="true" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/bg_round_rect_stroke_10"
            android:src="@mipmap/default_avatar" />

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_round_rect_stroke_50"
            android:src="@mipmap/default_avatar" />

    </LinearLayout>


</LinearLayout>