<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zht.samplewidget.myView.MyProgressView
        android:layout_marginTop="10dp"
        android:id="@+id/my_progress_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="fillData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填充数据"/>

    <com.zht.samplewidget.myView.chart.PieChartView
        android:id="@+id/m_PieChart"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:intervalAngle="0"
        app:pieChartWidth="22dp"
        app:clickWidth="0dp"
        app:useCenterCircle="true"
        />




    <!--  app:clickWidth="5dp"
        app:intervalAngle="1"

        app:pieChartWidth="80dp"-->

    <com.zht.samplewidget.myView.LoveView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>